---
export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`grid grid-cols-2 gap-2 md:flex md:gap-4 ${className}`}>
  <button class="control-btn" id="start-stop-btn"> Start </button>
  <button class="control-btn" id="reset-btn"> Reset </button>
  <button class="control-btn" id="add-5-btn"> +5 min </button>
  <button class="control-btn" id="settings-btn"> Settings </button>
</div>

<style>
  .control-btn {
    padding: 0.5rem 1rem;
    background: var(--color-dark);
    border: 2px solid var(--color-light);
    color: var(--color-light);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: var(--text-h6);
  }

  @media (min-width: 768px) {
    .control-btn {
      padding: 0.5rem 1.5rem;
    }
  }

  .control-btn:hover {
    background: var(--color-light);
    color: var(--color-dark);
  }
</style>
